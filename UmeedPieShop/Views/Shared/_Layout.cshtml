<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UmeedPieShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UmeedPieShop.styles.css" asp-append-version="true" />
 
</head>
<body style="background-image: url(/Images/bg.jfif);">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark text-light border-bottom box-shadow mb-3" style="background-color: black;">
            <div class="container-fluid">
                <span class="logo"> <a asp-controller="Home" asp-action="Index"><img src="~/Images/logo.png" alt="" width="70" height="70" class="d-inline-block align-text-top"></a> </span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <h2><a class="nav-link text-light" asp-controller="Pie" asp-action="PieOfWeek">Home</a></h2>
                        </li>
                        <li class="nav-item">
                            <h2><a class="nav-link text-light" asp-controller="Pie" asp-action="List" asp-route-id="0">Pies</a></h2>
                        </li>
                        <li class="nav-item">
                            <h2><a class="nav-link text-light" asp-controller="Pie" asp-action="ListMini">Short</a></h2>
                        </li>
                        <li class="nav-item">
                            <h2><a class="nav-link text-light" asp-controller="Category" asp-action="CategoryList">Type</a></h2>
                        </li>
                        @*<li class="nav-item">
                            <h2><a class="nav-link text-light" asp-controller="Pie" asp-action="ListMini"> <partial name = "_LoginPartial"/> </a></h2>
                        </li>*@

                    </ul>
                </div>
                
                

                @await Component.InvokeAsync("CategoryMenu")

                <div class="dropdown space">
                    <li class="btncolor text-light btn btn-warning dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                      Filter 
                    </li>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                      <li><a class="dropdown-item" asp-controller="Filter" asp-action="FilterUp" >Low - High</a></li>
                      <li><a class="dropdown-item" asp-controller="Filter" asp-action="FilterDown" >High - Low</a></li>
                      <li><a class="dropdown-item" asp-controller="Filter" asp-action="FilterName" >By Name</a></li>
                      <li><a class="dropdown-item" asp-controller="Filter" asp-action="FilterStock" >In Stock</a></li>
                    </ul>
                </div>

                <h2><a class="nav-link text-light" asp-controller="ShoppingCart" asp-action="Cart">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                    </svg>
                </a></h2>

                <div>
                    <partial name = "_LoginPartial"/>
                </div>
                

            </div>
        </nav>
    </header>

    


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - UmeedPieShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

