@model IEnumerable<UmeedPieShop.Models.Pie>

@{
    ViewData["Title"] = "FilterUp";
}
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageThumbnailUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPieOfTheWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStock)
            </th>
            <th>
                Purchase
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="Pie" asp-action="Details" asp-route-id="@item.PieId" >@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.ImageThumbnailUrl" class="sstyle" width=50%>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPieOfTheWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InStock)
            </td>
            <td>
                <p class="button">
                    <a class="btn buttonn btn-danger">Add to cart</a>
                </p>
            </td>
        </tr>
}
    </tbody>
</table>
