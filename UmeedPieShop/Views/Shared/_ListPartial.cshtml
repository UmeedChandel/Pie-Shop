@using UmeedPieShop.ViewModel
@model CustomeClass

@{
    ViewData["Title"] = "List";
}

<h1 class="display-5">@Model.CurrentCategory</h1>
<hr/>

<p>
    @Model.CategoryDescription
    Create New Pie(s): <a asp-controller="Pie" asp-action="CreatePie">click here</a> 
</p>
<br>

<div class="row">
    @foreach (var pie in Model.Pies)
    {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail spacing">
                    <a asp-controller="Pie" asp-action="Details" asp-route-id="@pie.PieId">
                        <img src="@pie.ImageThumbnailUrl" class="sstyle rounded">
                    </a>
                    <div class="caption">
                        <h3 class="pull-right">Rs.@pie.Price</h3>
                        <h3>
                            <a asp-controller="Pie" asp-action="Details" asp-route-id="@pie.PieId" >@pie.Name</a>
                        </h3>
                        <p>@pie.ShortDescription</p>
                    </div>
                </div>
                <br>
            </div>
    }
</div>


@if(Model.CurrentCategory == "List Of Pies")
{
    <div class="button">
        <a class="btn btn-primary" asp-controller="Pie" asp-action="List" asp-route-id="0">Top</a>
    </div>
}
